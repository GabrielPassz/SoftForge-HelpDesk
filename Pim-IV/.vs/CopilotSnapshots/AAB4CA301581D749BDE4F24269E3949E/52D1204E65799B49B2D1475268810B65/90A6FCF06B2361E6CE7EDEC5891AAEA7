@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Aprovar Usuários";
    var pendentes = ViewBag.Pendentes as List<PIM_FINAL.Models.Usuario> ?? new();
}
<h2>Aprovar Usuários</h2>
@if (!pendentes.Any())
{
    <p>Não há solicitações pendentes.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in pendentes)
            {
                <tr>
                    <td>@u.UsuarioId</td>
                    <td>@u.NomeCompleto</td>
                    <td>@u.Email</td>
                    <td>
                        <form method="post" asp-controller="Site" asp-action="AprovarUsuario" class="d-inline">
                            <input type="hidden" name="solicitacao_id" value="@u.UsuarioId" />
                            <div class="row g-2">
                                <div class="col">
                                    <input class="form-control" name="perfil" placeholder="Perfil (ex.: Solicitante, Técnico, Gestor, Admin)" />
                                </div>
                                <div class="col">
                                    <input class="form-control" name="departamento" placeholder="Departamento (opcional)" />
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-success">Aprovar</button>
                                </div>
                            </div>
                        </form>
                        <form method="post" asp-controller="Site" asp-action="ReprovarUsuario" class="d-inline ms-2">
                            <input type="hidden" name="solicitacao_id" value="@u.UsuarioId" />
                            <button type="submit" class="btn btn-danger">Reprovar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
