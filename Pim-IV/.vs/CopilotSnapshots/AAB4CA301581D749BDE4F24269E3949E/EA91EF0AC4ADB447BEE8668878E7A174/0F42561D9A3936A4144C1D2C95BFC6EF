@model PIM_FINAL.Models.Usuario
@{
 ViewData["Title"] = "Editar Usuário";
 var deps = ViewBag.Departamentos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
 var perfis = ViewBag.Perfis as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}
<h1>Editar</h1>
<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="UsuarioId" />
 <div class="form-group">
 <label asp-for="NomeCompleto"></label>
 <input asp-for="NomeCompleto" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Email"></label>
 <input asp-for="Email" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="DepartamentoId">Departamento</label>
 @Html.DropDownListFor(m => m.DepartamentoId, deps, "(selecione)", new { @class = "form-select" })
 </div>
 <div class="form-group">
 <label asp-for="PerfilId">Perfil</label>
 @Html.DropDownListFor(m => m.PerfilId, perfis, "(selecione)", new { @class = "form-select" })
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>