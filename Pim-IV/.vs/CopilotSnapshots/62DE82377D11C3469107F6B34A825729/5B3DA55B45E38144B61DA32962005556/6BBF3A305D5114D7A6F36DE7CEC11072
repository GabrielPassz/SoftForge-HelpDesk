self.addEventListener('install', event => {
    self.skipWaiting();
    event.waitUntil(
        caches.open('static-v3').then(c => c.addAll([
            '/',
            '/css/site.css',
            '/css/dbtestes.css',
            '/js/site.js',
            '/js/limitLists.js',
            '/manifest.webmanifest',
            '/icons/icon-192.png',
            '/icons/icon-512.png'
        ].filter(Boolean)))
    );
});

self.addEventListener('activate', event => {
    event.waitUntil(
        (async () => {
            const keys = await caches.keys();
            await Promise.all(keys.filter(k => k !== 'static-v3' && k !== 'runtime-v3').map(k => caches.delete(k)));
            await self.clients.claim();
        })()
    );
});

function isAuthOrHtml(reqUrl) {
    const url = new URL(reqUrl);
    const path = url.pathname.toLowerCase();
    // Never cache auth-related endpoints or page navigations
    return path.includes('/site/login') || path.includes('/site/logout') || path.includes('/site/registrocadastro');
}

self.addEventListener('fetch', event => {
    const req = event.request;

    // POST, PUT, DELETE: always go to network
    if (req.method !== 'GET') {
        event.respondWith(fetch(req));
        return;
    }

    const url = new URL(req.url);

    // For navigation requests (HTML) -> Network-first, no-store to avoid stale sessions
    if (req.mode === 'navigate') {
        event.respondWith(
            (async () => {
                try {
                    const fresh = await fetch(req, { cache: 'no-store', credentials: 'same-origin' });
                    return fresh;
                } catch (e) {
                    // offline fallback to cached root or last cached page
                    const cached = await caches.match('/');
                    return cached || new Response('Offline', { status:503, statusText: 'Offline' });
                }
            })()
        );
        return;
    }

    // Never cache auth endpoints
    if (isAuthOrHtml(req.url)) {
        event.respondWith(fetch(req, { cache: 'no-store', credentials: 'same-origin' }).then(resp => {
            // If user logged out, clear runtime caches to avoid stale content
            if (url.pathname.toLowerCase().includes('/site/logout')) {
                caches.keys().then(keys => Promise.all(keys.map(k => caches.delete(k))));
            }
            return resp;
        }));
        return;
    }

    // Static assets: Cache-first
    if (req.destination === 'style' || req.destination === 'script' || req.destination === 'image' || req.url.endsWith('.css') || req.url.endsWith('.js')) {
        event.respondWith(
            caches.match(req).then(cached => {
                if (cached) return cached;
                return fetch(req).then(resp => {
                    const clone = resp.clone();
                    caches.open('runtime-v3').then(c => c.put(req, clone));
                    return resp;
                });
            })
        );
        return;
    }

    // Default: network-first with runtime cache as fallback
    event.respondWith(
        fetch(req).then(resp => {
            const clone = resp.clone();
            caches.open('runtime-v3').then(c => c.put(req, clone));
            return resp;
        }).catch(() => caches.match(req))
    );
});
