@model IEnumerable<PIM_FINAL.Models.Usuario>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
 var perfis = ViewBag.Perfis as List<PIM_FINAL.Models.PerfilUsuario> ?? new List<PIM_FINAL.Models.PerfilUsuario>();
 var departamentos = ViewBag.Departamentos as List<PIM_FINAL.Models.Departamento> ?? new List<PIM_FINAL.Models.Departamento>();
}
