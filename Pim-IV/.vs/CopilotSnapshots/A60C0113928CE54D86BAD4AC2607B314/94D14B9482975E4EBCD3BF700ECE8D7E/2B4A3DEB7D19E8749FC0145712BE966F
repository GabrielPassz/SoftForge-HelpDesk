@model PIM_FINAL.Models.InicialPainelViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pt-BR">
 <head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>Painel Inicial - SoftForge HelpDesk</title>
 <link rel="stylesheet" href="/css/dbtestes.css" />
 </head>
 <body>
<div class="db-page container-fluid">
 @await Html.PartialAsync("_HeaderNav")

 <main class="db-content">
 <section class="db-section db-welcome">
 <h2>Bem-vindo(a), @Model?.NomeUsuario</h2>
 <p>
 <strong>Perfil:</strong> @Model?.Perfil
 </p>
 </section>

 <section class="db-section db-notifications">
 <h3>🔔 Notificações Recentes</h3>
 @{ var all = Model?.RecentNotifications ?? new List<string>(); var top = all.Take(3).ToList(); var rest = all.Skip(3).ToList(); }
 <ul id="notifTop">
 @foreach (var n in top) { <li>@n</li> }
 </ul>
 @if (rest.Any())
 {
 <div id="notifRest" style="display:none;">
 <ul>
 @foreach (var n in rest) { <li>@n</li> }
 </ul>
 </div>
 <button type="button" id="toggleNotif" class="btn btn-sm btn-secondary">Mostrar mais</button>
 }
 </section>

 <section class="db-section db-summary">
 <h3>📈 Resumo Rápido (Hoje)</h3>
 <table class="table table-bordered">
 <tr>
 <th>Indicador</th>
 <th>Valor</th>
 </tr>
 <tr>
 <td>Chamados em Espera</td>
 <td>@(Model?.ChamadosEmEspera)</td>
 </tr>
 <tr>
 <td>Chamados em Atendimento</td>
 <td><span class="cell-val">@(Model?.ChamadosEmAtendimento)</span></td>
 </tr>
 <tr>
 <td>Chamados Resolvidos (Hoje)</td>
 <td><span class="cell-val">@(Model?.ResolvidosHoje)</span></td>
 </tr>
 <tr>
 <td>SLA Cumprido</td>
 <td><span class="cell-val">@(Model?.SLACumpridoPercent)%</span></td>
 </tr>
 </table>
 </section>
 </main>

 <div class="db-footer">
 <footer>
 <p>©2025 SoftForge - Todos os direitos reservados</p>
 </footer>
 </div>
 </div>
 <script>
 (function(){
 const btn = document.getElementById('toggleNotif');
 if(!btn) return;
 const rest = document.getElementById('notifRest');
 btn.addEventListener('click', function(){
 const visible = rest.style.display !== 'none';
 rest.style.display = visible ? 'none' : 'block';
 btn.textContent = visible ? 'Mostrar mais' : 'Mostrar menos';
 });
 })();
 </script>
 </body>
