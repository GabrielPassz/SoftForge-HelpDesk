@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Login - SoftForge HelpDesk</title>
<link rel="stylesheet" href="/css/dbtestes.css" />
</head>
<body>
<div class="db-page container-fluid db-login">
 <div class="db-header">
 <header>
 <h1>SoftForge HelpDesk</h1>
 <p>Sistema Inteligente de Gestão de Chamados</p>
 </header>
 </div>

 <div class="db-nav">
 <nav>
 <a asp-page="/site/InicialPainel">Início</a> |
 <a asp-page="/site/AbrirChamado">Abrir Chamado</a> |
 <a asp-page="/site/MeusChamados">Meus Chamados</a> |
 <a asp-page="/site/Atendimento">Atendimento</a> |
 <a asp-page="/site/Escalonamento">Escalonamento</a> |
 <a asp-page="/site/DashboardGestor">Dashboard</a> |
 <a asp-page="/site/Relatorios">Relatórios</a> |
 <a asp-page="/site/GerenciarUsuarios">Gerenciar</a> |
 <a asp-page="/site/Configuracao">Configuração</a>
 </nav>
 </div>

 <main class="db-content">
 <section class="db-section db-overview">
 <h2>Login</h2>
 </section>

 <section class="db-section db-login-form">
 <form method="post" action="/site/Login">
 <div class="form-group">
 <label for="usuario">Usuário</label>
 <input id="usuario" name="usuario" class="form-control" required/>
 </div>
 <div class="form-group">
 <label for="senha">Senha</label>
 <input id="senha" name="senha" type="password" class="form-control" required/>
 </div>
 <button class="btn btn-primary" type="submit">Entrar</button>
 </form>
 </section>
 </main>

 <div class="db-footer">
 <footer>
 <p>©2025 SoftForge - Todos os direitos reservados</p>
 </footer>
 </div>
</div>
</body>
</html>