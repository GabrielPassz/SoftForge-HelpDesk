@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@* Página Login: autenticação de usuário (usuário + senha) e link para recuperação. Blocos: Head, Navegação, Formulário, Rodapé *@
<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Login - SoftForge HelpDesk</title>
<link rel="stylesheet" href="/css/dbtestes.css" />
</head>
<body>
<div class="db-page container-fluid db-login">
 @await Html.PartialAsync("_HeaderNav")

 <main class="db-content">
 <section class="db-section db-overview">
 <h2>Login</h2>
 </section>

 <section class="db-section db-login-form"> @* Formulário de credenciais *@
 <form method="post" action="/site/Login">
 <div class="form-group">
 <label for="usuario">Usuário</label>
 <input id="usuario" name="usuario" class="form-control" required/>
 </div>
 <div class="form-group">
 <label for="senha">Senha</label>
 <input id="senha" name="senha" type="password" class="form-control" required/>
 </div>
 @if (TempData["LoginError"] != null) { <div class="alert alert-danger" style="margin-top:6px">@TempData["LoginError"]</div> }
 <div class="db-actions">
 <button class="btn btn-primary" type="submit">Entrar</button>
 <a class="btn btn-link" asp-controller="Site" asp-action="RecuperarSenhaView">Esqueceu a senha?</a>
 </div>
 </form>
 </section>
 </main>

 <div class="db-footer">
 <footer>
 <p>©2025 SoftForge - Todos os direitos reservados</p>
 </footer>
 </div>
</div>
</body>
</html>