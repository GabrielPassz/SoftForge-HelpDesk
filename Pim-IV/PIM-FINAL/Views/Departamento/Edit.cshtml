@model PIM_FINAL.Models.Departamento

@{
 ViewData["Title"] = "Editar Departamento";
}
<h1>Editar</h1>
<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="DepartamentoId" />
 <div class="form-group">
 <label asp-for="NomeDepartamento"></label>
 <input asp-for="NomeDepartamento" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Descricao"></label>
 <input asp-for="Descricao" class="form-control" />
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>