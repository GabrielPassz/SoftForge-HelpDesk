@model IEnumerable<PIM_FINAL.Models.Departamento>

@{
 ViewData["Title"] = "Departamentos";
}

<h1>Departamentos</h1>
<p>
 <a asp-action="Create">Novo Departamento</a>
</p>
<table class="table">
 <thead>
 <tr>
 <th>Nome</th>
 <th>Descrição</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
 @foreach (var d in Model)
 {
 <tr>
 <td>@d.NomeDepartamento</td>
 <td>@d.Descricao</td>
 <td>
 <a asp-action="Details" asp-route-id="@d.DepartamentoId">Details</a> |
 <a asp-action="Edit" asp-route-id="@d.DepartamentoId">Edit</a> |
 <a asp-action="Delete" asp-route-id="@d.DepartamentoId">Delete</a>
 </td>
 </tr>
 }
 </tbody>
</table>