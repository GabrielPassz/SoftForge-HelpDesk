@model IEnumerable<PIM_FINAL.Models.Departamento>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
 ViewData["Title"] = "Departamentos";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>Departamentos - SoftForge HelpDesk</title>
 <link rel="stylesheet" href="/css/dbtestes.css" />
</head>
<body>
<div class="db-page container-fluid">
 @await Html.PartialAsync("_HeaderNav")
 <main class="db-content">
 @if (TempData["SuccessMessage"] != null) { <div class="alert alert-success">@TempData["SuccessMessage"]</div> }
 @if (TempData["ErrorMessage"] != null) { <div class="alert alert-danger">@TempData["ErrorMessage"]</div> }
 <section class="db-section db-overview">
 <h2>Departamentos</h2>
 <p><a asp-action="Create" class="btn btn-sm btn-primary">Novo Departamento</a></p>
 </section>
 <section class="db-section">
 <table class="table table-bordered w-100 stack-mobile limit-rows" data-limit="15">
 <thead><tr><th>Nome</th><th>Descrição</th><th>Ações</th></tr></thead>
 <tbody>
 @foreach (var d in Model)
 {
 <tr>
 <td data-label="Nome"><span class="cell-val">@d.NomeDepartamento</span></td>
 <td data-label="Descrição"><span class="cell-val">@d.Descricao</span></td>
 <td data-label="Ações"><span class="cell-val">
 <a asp-action="Details" asp-route-id="@d.DepartamentoId">Detalhes</a> |
 <a asp-action="Edit" asp-route-id="@d.DepartamentoId">Editar</a> |
 <a asp-action="Delete" asp-route-id="@d.DepartamentoId">Excluir</a>
 </span></td>
 </tr>
 }
 @if(!Model.Any()) { <tr><td colspan="3" class="text-center"><em>Nenhum departamento cadastrado.</em></td></tr> }
 </tbody>
 </table>
 </section>
 </main>
 <div class="db-footer"><footer><p>&copy;2025 SoftForge - Todos os direitos reservados</p></footer></div>
</div>
</body>
</html>