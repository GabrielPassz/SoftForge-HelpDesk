@model PIM_FINAL.Models.Departamento

@{
 ViewData["Title"] = "Excluir Departamento";
}
<h1>Excluir</h1>
<div>
 <h4>Tem certeza que deseja excluir?</h4>
 <dl class="row">
 <dt class="col-sm-2">Nome</dt>
 <dd class="col-sm-10">@Model.NomeDepartamento</dd>
 <dt class="col-sm-2">Descrição</dt>
 <dd class="col-sm-10">@Model.Descricao</dd>
 </dl>
 <form asp-action="Delete" method="post">
 <input type="hidden" asp-for="DepartamentoId" />
 <button type="submit" class="btn btn-danger">Delete</button>
 <a asp-action="Index" class="btn btn-secondary">Cancel</a>
 </form>
</div>