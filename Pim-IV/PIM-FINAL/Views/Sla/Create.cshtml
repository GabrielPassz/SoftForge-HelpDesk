@model PIM_FINAL.Models.Sla
@{
 ViewData["Title"] = "Criar SLA";
 var prioridades = ViewBag.Prioridades as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
}
<h1>Criar SLA</h1>
<form asp-action="Create" method="post">
 <div class="form-group">
 <label asp-for="NomeSla"></label>
 <input asp-for="NomeSla" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="PrioridadeId">Prioridade</label>
 <select asp-for="PrioridadeId" class="form-select">
 @foreach (var p in prioridades){<option value="@p.Value">@p.Text</option>}
 </select>
 </div>
 <div class="form-group">
 <label asp-for="TempoPrimeiraResposta"></label>
 <input asp-for="TempoPrimeiraResposta" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="TempoMaximoResolucao"></label>
 <input asp-for="TempoMaximoResolucao" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Descricao"></label>
 <input asp-for="Descricao" class="form-control" />
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>