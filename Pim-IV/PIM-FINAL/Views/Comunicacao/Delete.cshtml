@model PIM_FINAL.Models.Comunicacao

@{
    ViewData["Title"] = "Excluir Comunicação";
}

<h1>Excluir</h1>
<div>
    <h4>Tem certeza que deseja excluir?</h4>
    <dl class="row">
    <dt class="col-sm-2">Mensagem</dt>
    <dd class="col-sm-10">@Model.Mensagem</dd>
  <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.DataEnvio</dd>
</dl>
    <form asp-action="Delete" method="post">
   <input type="hidden" asp-for="ComunicacaoId" />
   <button type="submit" class="btn btn-danger">Delete</button>
   <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>