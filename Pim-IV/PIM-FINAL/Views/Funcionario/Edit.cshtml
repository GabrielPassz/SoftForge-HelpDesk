@model PIM_FINAL.Models.Funcionario

@{
 ViewData["Title"] = "Editar Funcionário";
}
<h1>Editar</h1>
<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="FuncionarioId" />
 <div class="form-group">
 <label asp-for="UsuarioId"></label>
 <input asp-for="UsuarioId" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Nome"></label>
 <input asp-for="Nome" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Email"></label>
 <input asp-for="Email" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="DataContratacao"></label>
 <input asp-for="DataContratacao" type="date" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Cargo"></label>
 <input asp-for="Cargo" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Matricula"></label>
 <input asp-for="Matricula" class="form-control" />
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>