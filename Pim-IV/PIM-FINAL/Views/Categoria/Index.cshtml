@model IEnumerable<PIM_FINAL.Models.Categoria>

@{
 ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>
<p>
 <a asp-action="Create">Nova Categoria</a>
</p>
<table class="table">
 <thead>
 <tr>
 <th>Nome</th>
 <th>Descrição</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
@foreach(var item in Model)
{
 <tr>
 <td>@item.NomeCategoria</td>
 <td>@item.Descricao</td>
 <td>
 <a asp-action="Details" asp-route-id="@item.CategoriaId">Details</a> |
 <a asp-action="Edit" asp-route-id="@item.CategoriaId">Edit</a> |
 <a asp-action="Delete" asp-route-id="@item.CategoriaId">Delete</a>
 </td>
 </tr>
}
 </tbody>
</table>