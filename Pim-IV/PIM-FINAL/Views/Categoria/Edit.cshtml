@model PIM_FINAL.Models.Categoria

@{
 ViewData["Title"] = "Editar Categoria";
}
<h1>Editar</h1>
<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="CategoriaId" />
 <div class="form-group">
 <label asp-for="NomeCategoria"></label>
 <input asp-for="NomeCategoria" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Descricao"></label>
 <input asp-for="Descricao" class="form-control" />
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>