@model PIM_FINAL.Models.Avaliacao

@{
 ViewData["Title"] = "Editar Avaliação";
}
<h1>Editar</h1>
<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="AvaliacaoId" />
 <div class="form-group">
 <label asp-for="Nota"></label>
 <input asp-for="Nota" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Comentario"></label>
 <input asp-for="Comentario" class="form-control" />
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>