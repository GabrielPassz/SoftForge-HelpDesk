@model PIM_FINAL.Models.BaseConhecimento

@{
 ViewData["Title"] = "Editar Artigo";
}
<h1>Editar</h1>
<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="BaseId" />
 <div class="form-group">
 <label asp-for="Titulo"></label>
 <input asp-for="Titulo" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Descricao"></label>
 <input asp-for="Descricao" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Solucao"></label>
 <textarea asp-for="Solucao" class="form-control"></textarea>
 </div>
 <div class="form-group">
 <label asp-for="CategoriaId"></label>
 <input asp-for="CategoriaId" class="form-control" />
 </div>
 <div class="form-group">
 <label asp-for="Aprovado"></label>
 <input asp-for="Aprovado" type="checkbox" />
 </div>
 <button type="submit" class="btn btn-primary">Salvar</button>
</form>