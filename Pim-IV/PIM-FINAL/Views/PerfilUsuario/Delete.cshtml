@model PIM_FINAL.Models.PerfilUsuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
 ViewData["Title"] = "Excluir Perfil";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>Excluir Perfil - SoftForge HelpDesk</title>
 <link rel="stylesheet" href="/css/dbtestes.css" />
</head>
<body>
<div class="db-page container-fluid">
 @await Html.PartialAsync("_HeaderNav")
 <main class="db-content">
 <section class="db-section">
 <h2>Excluir Perfil</h2>
 <p class="text-warning">Tem certeza que deseja excluir este perfil?</p>
 <table class="table table-bordered w-100 db-summary-table">
 <tbody>
 <tr><td><strong>ID</strong></td><td>@Model.PerfilId</td></tr>
 <tr><td><strong>Nome</strong></td><td>@Model.NomePerfil</td></tr>
 <tr><td><strong>Descrição</strong></td><td>@Model.Descricao</td></tr>
 </tbody>
 </table>
 <form asp-action="Delete" method="post">
 @Html.AntiForgeryToken()
 <input type="hidden" asp-for="PerfilId" />
 <div class="db-actions">
 <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
 <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
 </div>
 </form>
 </section>
 </main>
 <div class="db-footer"><footer><p>&copy;2025 SoftForge - Todos os direitos reservados</p></footer></div>
</div>
</body>
</html>