@model PIM.Models.Prioridade

@{
    ViewData["Title"] = "Nova Prioridade";
}

<h2>Nova Prioridade</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NomePrioridade"></label>
        <input asp-for="NomePrioridade" class="form-control" />
        <span asp-validation-for="NomePrioridade" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>