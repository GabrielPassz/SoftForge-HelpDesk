@model PIM.Models.Anexo

@{
    ViewData["Title"] = "Editar Anexo";
}

<h2>Editar Anexo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AnexoId" />

    <div class="form-group">
        <label asp-for="ChamadoId"></label>
        <input asp-for="ChamadoId" class="form-control" />
        <span asp-validation-for="ChamadoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NomeArquivo"></label>
        <input asp-for="NomeArquivo" class="form-control" />
        <span asp-validation-for="NomeArquivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoArquivo"></label>
        <input asp-for="TipoArquivo" class="form-control" />
        <span asp-validation-for="TipoArquivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CaminhoArquivo"></label>
        <input asp-for="CaminhoArquivo" class="form-control" />
        <span asp-validation-for="CaminhoArquivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataUpload"></label>
        <input asp-for="DataUpload" class="form-control" type="date" />
        <span asp-validation-for="DataUpload" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}