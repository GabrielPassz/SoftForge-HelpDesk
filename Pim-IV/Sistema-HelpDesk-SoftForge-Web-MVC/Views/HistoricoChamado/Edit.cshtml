@model PIM.Models.HistoricoChamado

@{
    ViewData["Title"] = "Editar Histórico";
}

<h2>Editar Histórico</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="HistoricoId" />

    <div class="form-group">
        <label asp-for="ChamadoId"></label>
        <input asp-for="ChamadoId" class="form-control" />
        <span asp-validation-for="ChamadoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Acao"></label>
        <input asp-for="Acao" class="form-control" />
        <span asp-validation-for="Acao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataAcao"></label>
        <input asp-for="DataAcao" class="form-control" type="date" />
        <span asp-validation-for="DataAcao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatusAnteriorId"></label>
        <input asp-for="StatusAnteriorId" class="form-control" />
        <span asp-validation-for="StatusAnteriorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatusNovoId"></label>
        <input asp-for="StatusNovoId" class="form-control" />
        <span asp-validation-for="StatusNovoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}