@model PIM.Models.Funcionario

@{
    ViewData["Title"] = "Excluir Funcionário";
}

<h2>Excluir Funcionário</h2>
<h3>Tem certeza que deseja excluir este funcionário?</h3>
<dl class="row">
    <dt class="col-sm-2">Matrícula</dt>
    <dd class="col-sm-10">@Model.Matricula</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="FuncionarioId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>