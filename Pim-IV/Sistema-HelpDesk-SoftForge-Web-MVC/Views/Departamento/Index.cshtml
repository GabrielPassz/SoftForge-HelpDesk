@model IEnumerable<PIM.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h2>Departamentos</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().NomeDepartamento)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.NomeDepartamento</td>
            <td>@item.Descricao</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.DepartamentoId">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@item.DepartamentoId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartamentoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>