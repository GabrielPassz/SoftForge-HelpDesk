@model PIM.Models.PerfilUsuario

@{
 ViewData["Title"] = "Detalhes do Perfil";
}

<h2>Detalhes</h2>

<div>
 <h4>PerfilUsuario</h4>
 <hr />
 <dl class="row">
 <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PerfilId)</dt>
 <dd class="col-sm-9">@Model.PerfilId</dd>

 <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NomePerfil)</dt>
 <dd class="col-sm-9">@Model.NomePerfil</dd>

 <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
 <dd class="col-sm-9">@Model.Descricao</dd>
 </dl>
</div>

<p>
 <a asp-action="Edit" asp-route-id="@Model.PerfilId" class="btn btn-warning">Editar</a>
 <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>