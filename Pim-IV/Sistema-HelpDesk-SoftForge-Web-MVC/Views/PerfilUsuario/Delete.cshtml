@model PIM.Models.PerfilUsuario

@{
 ViewData["Title"] = "Excluir Perfil";
}

<h2>Excluir Perfil</h2>

<h3>Tem certeza que deseja excluir este perfil?</h3>
<div>
 <h4>PerfilUsuario</h4>
 <hr />
 <dl class="row">
 <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NomePerfil)</dt>
 <dd class="col-sm-9">@Model.NomePerfil</dd>

 <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
 <dd class="col-sm-9">@Model.Descricao</dd>
 </dl>
</div>

<form asp-action="Delete" method="post">
 <input type="hidden" asp-for="PerfilId" />
 <button type="submit" class="btn btn-danger">Excluir</button>
 <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>