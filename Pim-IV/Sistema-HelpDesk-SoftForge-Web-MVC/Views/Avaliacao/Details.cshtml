@model PIM.Models.Avaliacao

@{
    ViewData["Title"] = "Detalhes da Avaliação";
}

<h2>Detalhes da Avaliação</h2>
<dl class="row">
    <dt class="col-sm-2">Nota</dt>
    <dd class="col-sm-10">@Model.Nota</dd>
    <dt class="col-sm-2">Comentário</dt>
    <dd class="col-sm-10">@Model.Comentario</dd>
    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.DataAvaliacao.ToShortDateString()</dd>
    <dt class="col-sm-2">Chamado</dt>
    <dd class="col-sm-10">@Model.ChamadoId</dd>
    <dt class="col-sm-2">Usuário</dt>
    <dd class="col-sm-10">@Model.UsuarioSolicitanteId</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.AvaliacaoId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>