@model PIM.Models.Avaliacao

@{
 ViewData["Title"] = "Editar Avaliação";
}

<h2>Editar Avaliação</h2>

<form asp-action="Edit" method="post">
 <input type="hidden" asp-for="AvaliacaoId" />
 
 <div class="form-group">
 <label asp-for="ChamadoId"></label>
 <input asp-for="ChamadoId" class="form-control" />
 <span asp-validation-for="ChamadoId" class="text-danger"></span>
 </div>
 
 <div class="form-group">
 <label asp-for="UsuarioSolicitanteId"></label>
 <input asp-for="UsuarioSolicitanteId" class="form-control" />
 <span asp-validation-for="UsuarioSolicitanteId" class="text-danger"></span>
 </div>
 
 <div class="form-group">
 <label asp-for="Nota"></label>
 <input asp-for="Nota" class="form-control" type="number" min="1" max="5" />
 <span asp-validation-for="Nota" class="text-danger"></span>
 </div>
 
 <div class="form-group">
 <label asp-for="Comentario"></label>
 <textarea asp-for="Comentario" class="form-control"></textarea>
 <span asp-validation-for="Comentario" class="text-danger"></span>
 </div>
 
 <div class="form-group">
 <label asp-for="DataAvaliacao"></label>
 <input asp-for="DataAvaliacao" class="form-control" type="date" />
 <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
 </div>
 
 <button type="submit" class="btn btn-primary">Salvar</button>
 <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}