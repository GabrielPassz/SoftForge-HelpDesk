@model PIM.Models.IAAnalise

@{
    ViewData["Title"] = "Detalhes da Análise de IA";
}

<h2>Detalhes da Análise de IA</h2>

<div>
    <h4>ID: @Model.IAId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Chamado</dt>
        <dd class="col-sm-9">@Model.ChamadoId</dd>
        <dt class="col-sm-3">Categoria Prevista</dt>
        <dd class="col-sm-9">@Model.CategoriaPrevista</dd>
        <dt class="col-sm-3">Confiança</dt>
        <dd class="col-sm-9">@Model.Confianca</dd>
        <dt class="col-sm-3">Resultado Validado</dt>
        <dd class="col-sm-9">@(Model.ResultadoValidado ? "Sim" : "Não")</dd>
        <dt class="col-sm-3">Comentário</dt>
        <dd class="col-sm-9">@Model.Comentario</dd>
        <dt class="col-sm-3">Data da Análise</dt>
        <dd class="col-sm-9">@Model.DataAnalise.ToShortDateString()</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IAId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>