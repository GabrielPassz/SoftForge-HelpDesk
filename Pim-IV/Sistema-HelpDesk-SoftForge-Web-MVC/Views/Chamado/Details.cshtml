@model PIM.Models.Chamado

@{
    ViewData["Title"] = "Detalhes do Chamado";
}

<h2>Detalhes do Chamado</h2>
<dl class="row">
    <dt class="col-sm-2">Protocolo</dt>
    <dd class="col-sm-10">@Model.Protocolo</dd>
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>
    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>
    <dt class="col-sm-2">Abertura</dt>
    <dd class="col-sm-10">@Model.DataAbertura.ToShortDateString()</dd>
    <dt class="col-sm-2">Fechamento</dt>
    <dd class="col-sm-10">@Model.DataFechamento?.ToShortDateString()</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.ChamadoId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>