@model PIM.Models.Chamado

@{
    ViewData["Title"] = "Editar Chamado";
}

<h2>Editar Chamado</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ChamadoId" />

    <div class="form-group">
        <label asp-for="Protocolo"></label>
        <input asp-for="Protocolo" class="form-control" />
        <span asp-validation-for="Protocolo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataAbertura"></label>
        <input asp-for="DataAbertura" class="form-control" type="date" />
        <span asp-validation-for="DataAbertura" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataFechamento"></label>
        <input asp-for="DataFechamento" class="form-control" type="date" />
        <span asp-validation-for="DataFechamento" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="SLAAtingido" class="form-check-input" />
        <label asp-for="SLAAtingido" class="form-check-label"></label>
        <span asp-validation-for="SLAAtingido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UsuarioSolicitanteId"></label>
        <input asp-for="UsuarioSolicitanteId" class="form-control" />
        <span asp-validation-for="UsuarioSolicitanteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TecnicoResponsavelId"></label>
        <input asp-for="TecnicoResponsavelId" class="form-control" />
        <span asp-validation-for="TecnicoResponsavelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId"></label>
        <input asp-for="CategoriaId" class="form-control" />
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrioridadeId"></label>
        <input asp-for="PrioridadeId" class="form-control" />
        <span asp-validation-for="PrioridadeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StatusId"></label>
        <input asp-for="StatusId" class="form-control" />
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SLAId"></label>
        <input asp-for="SLAId" class="form-control" />
        <span asp-validation-for="SLAId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}