@model PIM.Models.Atendimento

@{
    ViewData["Title"] = "Novo Atendimento";
}

<h2>Novo Atendimento</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ChamadoId"></label>
        <input asp-for="ChamadoId" class="form-control" />
        <span asp-validation-for="ChamadoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioTecnicoId"></label>
        <input asp-for="UsuarioTecnicoId" class="form-control" />
        <span asp-validation-for="UsuarioTecnicoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataAtendimento"></label>
        <input asp-for="DataAtendimento" class="form-control" type="date" />
        <span asp-validation-for="DataAtendimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AcaoRealizada"></label>
        <input asp-for="AcaoRealizada" class="form-control" />
        <span asp-validation-for="AcaoRealizada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TempoGasto"></label>
        <input asp-for="TempoGasto" class="form-control" />
        <span asp-validation-for="TempoGasto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>