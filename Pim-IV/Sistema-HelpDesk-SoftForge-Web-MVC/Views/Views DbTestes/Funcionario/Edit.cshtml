@model PIM.Models.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<h2>Editar Funcionário</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="FuncionarioId" />
    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataAdmissao"></label>
        <input asp-for="DataAdmissao" class="form-control" type="date" />
        <span asp-validation-for="DataAdmissao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataDemissao"></label>
        <input asp-for="DataDemissao" class="form-control" type="date" />
        <span asp-validation-for="DataDemissao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>