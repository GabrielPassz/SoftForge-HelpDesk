@model PIM.Models.Chamado

@{
    ViewData["Title"] = "Novo Chamado";
}

<h2>Novo Chamado</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Protocolo"></label>
        <input asp-for="Protocolo" class="form-control" />
        <span asp-validation-for="Protocolo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataAbertura"></label>
        <input asp-for="DataAbertura" class="form-control" type="date" />
        <span asp-validation-for="DataAbertura" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFechamento"></label>
        <input asp-for="DataFechamento" class="form-control" type="date" />
        <span asp-validation-for="DataFechamento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>