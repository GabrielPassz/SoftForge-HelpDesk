@model IEnumerable<PIM.Models.Anexo>

@{
    ViewData["Title"] = "Anexos";
}

<h2>Anexos</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo Anexo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().NomeArquivo)</th>
            <th>@Html.DisplayNameFor(model => model.First().TipoArquivo)</th>
            <th>@Html.DisplayNameFor(model => model.First().DataUpload)</th>
            <th>@Html.DisplayNameFor(model => model.First().ChamadoId)</th>
            <th>@Html.DisplayNameFor(model => model.First().UsuarioId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.NomeArquivo</td>
            <td>@item.TipoArquivo</td>
            <td>@item.DataUpload.ToShortDateString()</td>
            <td>@item.ChamadoId</td>
            <td>@item.UsuarioId</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AnexoId">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@item.AnexoId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.AnexoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>