@model PIM.Models.Anexo

@{
    ViewData["Title"] = "Excluir Anexo";
}

<h2>Excluir Anexo</h2>
<h3>Tem certeza que deseja excluir este anexo?</h3>
<dl class="row">
    <dt class="col-sm-2">Nome do Arquivo</dt>
    <dd class="col-sm-10">@Model.NomeArquivo</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="AnexoId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>