@model IEnumerable<PIM.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h2>Categorias</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().NomeCategoria)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.NomeCategoria</td>
            <td>@item.Descricao</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>