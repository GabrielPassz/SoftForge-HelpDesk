@model PIM.Models.Avaliacao

@{
    ViewData["Title"] = "Nova Avaliação";
}

<h2>Nova Avaliação</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nota"></label>
        <input asp-for="Nota" class="form-control" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comentario"></label>
        <input asp-for="Comentario" class="form-control" />
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataAvaliacao"></label>
        <input asp-for="DataAvaliacao" class="form-control" type="date" />
        <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChamadoId"></label>
        <input asp-for="ChamadoId" class="form-control" />
        <span asp-validation-for="ChamadoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioSolicitanteId"></label>
        <input asp-for="UsuarioSolicitanteId" class="form-control" />
        <span asp-validation-for="UsuarioSolicitanteId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>