@model PIM.Models.Avaliacao

@{
    ViewData["Title"] = "Excluir Avaliação";
}

<h2>Excluir Avaliação</h2>
<h3>Tem certeza que deseja excluir esta avaliação?</h3>
<dl class="row">
    <dt class="col-sm-2">Nota</dt>
    <dd class="col-sm-10">@Model.Nota</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="AvaliacaoId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>