@model PIM.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<h2>Detalhes da Categoria</h2>
<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.NomeCategoria</dd>
    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>