@model PIM.Models.SLA

@{
    ViewData["Title"] = "Editar SLA";
}

<h2>Editar SLA</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SLAId" />

    <div class="form-group">
        <label asp-for="NomeSLA"></label>
        <input asp-for="NomeSLA" class="form-control" />
        <span asp-validation-for="NomeSLA" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoPrimeiraResposta"></label>
        <input asp-for="TempoPrimeiraResposta" class="form-control" type="number" />
        <span asp-validation-for="TempoPrimeiraResposta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoMaximoResolucao"></label>
        <input asp-for="TempoMaximoResolucao" class="form-control" type="number" />
        <span asp-validation-for="TempoMaximoResolucao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrioridadeId"></label>
        <input asp-for="PrioridadeId" class="form-control" />
        <span asp-validation-for="PrioridadeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}